<style>
  a.active {
    color: #38b6ff;
  }
</style>

<script>
  const anchors = document.getElementById('anchors') as HTMLUListElement;
  const init = document.getElementById('init') as HTMLAnchorElement;

  if (anchors && init) {
    const sect = window.location.hash;

    for (let i = 0; i < anchors.children.length; i++) {
      const element = anchors.children[i] as HTMLLIElement;
      const anchor = [...element.children][0] as HTMLAnchorElement;

      element.addEventListener('click', () => {
        for (let e = 0; e < anchors.children.length; e++) {
          const el = anchors.children[e];
          const anc = [...el.children][0] as HTMLAnchorElement;
          anc.classList.remove('active');
        };

        anchor.classList.add('active');
      });

      if (sect === anchor.hash) {
        anchor.classList.add('active');
      } else {
        anchor.classList.remove('active');
      };
    };

    init.addEventListener('click', () => {
      for (let e = 0; e < anchors.children.length; e++) {
        const el = anchors.children[e];
        const anc = [...el.children][0] as HTMLAnchorElement;
        anc.classList.remove('active');
      };
    });
  }
</script>