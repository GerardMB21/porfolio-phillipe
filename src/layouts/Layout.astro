---
import '@fontsource/space-mono/400.css';
import '@fontsource/space-mono/700.css';
import '@fontsource/nunito-sans/200.css';
import '@fontsource/nunito-sans/300.css';
import '@fontsource/nunito-sans/400.css';
import '@fontsource/nunito-sans/500.css';
import '@fontsource/nunito-sans/600.css';
import '@fontsource/nunito-sans/700.css';
import '@fontsource/nunito-sans/800.css';
import '@fontsource/nunito-sans/900.css';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Phillipe Matos comunicador audiovisual experto en poder capturar las ideas y tangibilizarlas para que las demas personas puedan ver tu perspectivas y tus sueños de una manera única." />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="w-full min-h-dvh overflow-x-hidden snap-y snap-mandatory bg-secondary">
		<Header />
		<div class="fixed rounded-full size-20 blur-2xl top-1/4 -translate-y-1/2 left-1/4 -translate-x-1/2 shadow-2xl z-[-1] bg-white shadow-white"></div>
		<main>
			<slot />
		</main>
		<div class="fixed rounded-full size-20 blur-2xl bottom-1/4 -translate-y-1/2 right-1/4 -translate-x-1/2 shadow-2xl z-[-1] bg-white shadow-white"></div>
		<div class="fixed rounded-full size-72 blur-2xl -translate-y-1/3 right-1/3 -translate-x-1/2 shadow-2xl z-[-1] bg-[radial-gradient(circle,rgba(135,65,176,1)_25%,rgba(155,79,175,0.896796218487395)_100%)] shadow-[radial-gradient(circle,rgba(135,65,176,1)_25%,rgba(155,79,175,0.896796218487395)_100%)]"></div>
		<div class="fixed rounded-full size-80 blur-2xl top-1/2 -translate-x-1/4 shadow-2xl z-[-1] bg-[radial-gradient(circle,rgba(38,119,149,1)_25%,rgba(24,77,92,1)_60%,rgba(22,50,79,1)_100%)] shadow-[radial-gradient(circle,rgba(38,119,149,1)_25%,rgba(24,77,92,1)_60%,rgba(22,50,79,1)_100%)]"></div>
		<div class="fixed rounded-full size-80 blur-2xl bottom-1/3 right-1/3 translate-x-3/4 shadow-2xl z-[-1] bg-[radial-gradient(circle,rgba(43,111,181,1)_25%,rgba(32,67,91,1)_100%)] shadow-[radial-gradient(circle,rgba(43,111,181,1)_25%,rgba(32,67,91,1)_100%)]"></div>
		<div class="fixed rounded-full size-96 blur-2xl bottom-1/3 right-1/4 translate-x-full shadow-2xl z-[-1] bg-[radial-gradient(circle,rgba(86,65,193,1)_25%,rgba(68,44,126,1)_100%)] shadow-[radial-gradient(circle,rgba(86,65,193,1)_25%,rgba(68,44,126,1)_100%)]"></div>
		<Footer />
	</body>
</html>

<style is:global>
:root {
		color-scheme: light dark;
	}

	html {
		font-family: 'Nunito Sans', sans-serif;
		scroll-behavior: smooth;
		scroll-padding: 110px;
	}

	body {
		display: flex;
		flex-direction: column;
		background: light-dark(#fff, #050505);
		color: light-dark(#050505, #fff);
		min-height: 100dvh;
	}

	header, footer {
		font-family: 'Space Mono', monospace;
	}

	.space-mono {
		font-family: 'Space Mono', monospace;
	}

	.text-stroke {
		-webkit-text-stroke: 2px #fff;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	/* * {
		outline: 3px solid limegreen !important;
		background: rgb(0 100 0/ 0.1) !important;
	} */
</style>
